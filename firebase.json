{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "qc-functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },

  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0" 
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0" 
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0" 
    },
    "storage": {
      "port": 9199,
      "host": "0.0.0.0" 
    },
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0" 
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "0.0.0.0" 
    },
    "singleProjectMode": true
  }
}